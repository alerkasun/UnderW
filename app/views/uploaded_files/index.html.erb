<h1>Uploaded files</h1>
<table class="table table-hover table-condensed">
    <thead>
      <tr>
          <td></td>
          <td>Filename</td>
          <td>Content Type</td>
          <td>Size</td>
          <td>Created At</td>
          <td></td>
      </tr>
    </thead>
    <tbody>
      <% for uf in @uploaded_files do %>
        <tr>
            <td><%= link_to "Download", device_uploaded_file_path(uf.device, uf), type: "button", class: "btn btn-primary" %></td>
            <td><%= uf.original_filename %></td>
            <td><%= uf.content_type %></td>
            <td><%= number_to_human_size(uf.file_size) %></td>
            <td><%= uf.created_at %></td>
            <td><%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                            device_uploaded_file_path(uf.device, uf),
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                            :class => 'btn btn-mini btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
</table>